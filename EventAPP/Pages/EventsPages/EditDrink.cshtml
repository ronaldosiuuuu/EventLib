@page
@model EventAPP.Pages.EventsPages.EditDrinkModel
@{
}
h1> Update a Event  </h1>
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group">

                <label asp-for="@Model.Drink.Id" class="control-label">Drink Id</label><br>
                <input asp-for="@Model.Drink.Id" class="form-control" /><br>
                <span asp-validation-for="@Model.Drink.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Drinktype" class="control-label">Drink type</label><br>
                <select asp-for="Drinktype" class="form-control">
                    <br>
                    @foreach (var eve in Model.DrinkTypes)
                    {
                            <option value="@eve">@eve</option>
                    }
                </select>
            </div><br>

            <div class="form-group">
                <label asp-for="@Model.Drink.Name" class="control-label">Drink name</label><br>
                <input asp-for="@Model.Drink.Name" class="form-control" /><br>
                <span asp-validation-for="@Model.Drink.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Drink.Price" class="control-label">Drink Price</label><br>
                <input asp-for="@Model.Drink.Price" class="form-control" /><br>
                <span asp-validation-for="@Model.Drink.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Drink.Quanity" class="control-label">Quanaity</label><br>
                <input asp-for="@Model.Drink.Quanity" class="form-control" /><br>
                <span asp-validation-for="@Model.Drink.Quanity" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class. />
            </div>
        </form>
    </div>
</div>

